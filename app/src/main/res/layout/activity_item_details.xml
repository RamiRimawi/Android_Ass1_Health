<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78B601"
    android:orientation="vertical"
    tools:context=".ItemDetailsActivity">


    <ImageView
        android:id="@+id/imgItemLogo"
        android:layout_width="366dp"
        android:layout_height="225dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="10dp"
android:layout_marginStart="5dp"
      >
      <TextView
          android:id="@+id/txtActivity4ItemName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:textStyle="bold"
          android:text="Time : "/>

      <TextView
          android:id="@+id/txtActivity4ItemTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:textColor="@color/white"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginEnd="50dp"
          android:text="30 min"/>

      <TextView
          android:id="@+id/txtActivity4Ite"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="Total calories : "
          android:textColor="@color/black"
          android:textSize="20sp"
          android:layout_marginTop="10dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/txtActivity4ItemTotalCal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:textColor="@color/white"
          android:textSize="18sp"
          android:textStyle="bold"
          android:text="100 cal"/>
  </LinearLayout>

    <TextView
        android:id="@+id/txtFromWhatIt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="30dp"
        android:maxWidth="300dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtHowToMake"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />




</LinearLayout>